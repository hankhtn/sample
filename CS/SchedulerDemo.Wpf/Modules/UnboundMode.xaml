<local:SchedulerDemoModule x:Class="SchedulerDemo.UnboundMode"
                           Height="400"
                           Width="800"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:dxsch="http://schemas.devexpress.com/winfx/2008/xaml/scheduler"
                           xmlns:local="clr-namespace:SchedulerDemo">
    <dxsch:SchedulerControl x:Name="scheduler"
                            ActiveViewType="Day"
                            VerticalAlignment="Stretch"
                            SnapsToDevicePixels="False"
                            GroupType="Resource"
                            ShowBorder="False">
        <dxsch:SchedulerControl.DayView>
            <dxsch:DayView ResourcesPerPage="3" />
        </dxsch:SchedulerControl.DayView>
        <dxsch:SchedulerControl.FullWeekView>
            <dxsch:FullWeekView Enabled="True" ResourcesPerPage="3" />
        </dxsch:SchedulerControl.FullWeekView>
        <dxsch:SchedulerControl.WeekView>
            <dxsch:WeekView Enabled="False" ResourcesPerPage="3" />
        </dxsch:SchedulerControl.WeekView>
    </dxsch:SchedulerControl>
</local:SchedulerDemoModule>